#!/usr/bin/env groovy

node('master'){
    checkout scm
    stage('Build'){
        echo 'Building...'
    }
    stage('Test'){
        echo 'Testing...'
    }
    stage('Deploy'){
        echo 'Deploying...'
        sshagent (credentials: ['ssh-jenkins-to-ubuntu-cred']) {
                echo 'copying wp-content/themes/HellDorado theme'
                sh "rsync -avr --delete wp-content/themes/HellDorado jenkins@re7.helldorado.fr:wp-content/themes/HellDorado -e 'ssh -p 443'"
       }
    }
}

