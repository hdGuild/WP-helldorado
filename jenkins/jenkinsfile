#!/usr/bin/env groovy

node('master'){
    checkout scm
    stage('Build'){
        echo 'Building...'
    }
    stage('Test'){
        echo 'Testing...'
    }
    stage('Deploy'){
        echo 'Deploying...'
        sshagent (credentials: ['ssh-jenkins-to-ubuntu-cred']) {
                sh "echo 'copying wp-content/themes/HellDorado theme'"
                sh "scp -r -P 443  ./wp-content/themes/HellDorado jenkins@re7.helldorado.fr:/wp-content/themes/HellDorado"
       }
    }
}

